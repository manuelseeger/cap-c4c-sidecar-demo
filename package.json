{
  "name": "cap-c4c-sidecar-demo",
  "version": "1.0.0",
  "description": "CAP Sidecar demo for C4C",
  "repository": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@azure/identity": "^3.1.0",
    "@azure/service-bus": "^7.7.3",
    "@sap/cds": "^6",
    "@sap/xssec": "^3",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "devDependencies": {
    "dotenv": "^16.0.3",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "build": "cds build --production && mbt build -t gen --mtar mta.tar",
    "predeploy": "npm run build",
    "deploy": "cf deploy gen/mta.tar"
  },
  "engines": {
    "node": "^18.7"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "customer": {
        "kind": "odata-v2",
        "model": "./srv/external/customer",
        "credentials": {
          "path": "/v1/customer/",
          "destination": "c4c-odata"
        }
      },
      "AzureServiceBus": {
        "impl": "srv/external/AzureServiceBus.js",
        "credentials": {
          "host": "spc-a-e2e-cockpit.servicebus.windows.net",
          "queue": "incoming",
          "topic": "swisslife.e2e.cockpit/cockpitmessage"
        }
      },
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/sidecar.db"
        }
      },
      "requires": {
        "auth": {
          "kind": "xsuaa"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      },
      "[hybrid]": {
        "db": {
          "kind": "hana-cloud"
        },
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  }
}
